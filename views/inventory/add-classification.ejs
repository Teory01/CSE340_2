<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>



<div class="classification-container">
  <h1>Add Classification</h1>
  <div class="notice">
    <%- messages() %>
  </div>

  <form action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name</label>
    <p>Name must be alphabet characters only.</p>
    <input type="text" id="classification_name" name="classification_name" required pattern="^[A-Za-z0-9]+$"
      title="No spaces or special characters" value="<%= locals.classification_name %>">
    <button type="submit">Add Classification</button>
  </form>
</div>